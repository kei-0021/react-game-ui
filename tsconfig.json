{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ESNext",
    "module": "node16",
    "moduleResolution": "node16",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
  },
  "include": [
    "src/components",
    "src/types",
  ],
  "exclude": [
    "node_modules",
    "src/__mocks__",
    "src/setupTests.ts",
    "src/components/__tests__",
    "src/data",
    "src/hooks"
  ]
}
