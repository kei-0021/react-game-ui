{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ESNext",
    "module": "node16",
    "moduleResolution": "node16",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "typeRoots": ["./node_modules/@types", "./node_modules"],
    "types": ["node", "react", "react-dom"]
  },
  "include": [
    "src/components",
    "src/types",
    "src/global.d.ts",
    "src/index.ts"  
  ],
  "exclude": [
    "node_modules",
    "src/__mocks__",
    "src/setupTests.ts",
    "src/components/__tests__",
    "tests/data",
    "src/hooks"
  ]
}
