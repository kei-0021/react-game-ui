{
  "name": "react-game-ui",
  "version": "1.0.0",
  "type": "module",
  "description": "React + Socket.IO UI components for card/dice games",
  "main": "dist/react-game-ui.cjs.js",
  "module": "dist/react-game-ui.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react-game-ui.es.js",
      "require": "./dist/react-game-ui.cjs.js",
      "types": "./dist/types/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "require": "./dist/server.js"
    },
    "./server-logic": {
      "import": "./dist/server-logic.js",
      "require": "./dist/server-logic.js"
    },
    "./server-utils": {
      "import": "./dist/server-utils.js",
      "require": "./dist/server-utils.js"
    },
    "./dist/react-game-ui.css": "./dist/react-game-ui.css"
  },
  "files": [
    "dist",
    "src/server/server.js",
    "src/server/server-logic.js",
    "src/server/server-utils.js"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "NODE_ENV=production vite build && tsc --project tsconfig.json && node -e \"require('fs').copyFileSync('src/server/server.js', 'dist/server.js'); require('fs').copyFileSync('src/server/server-logic.js', 'dist/server-logic.js'); require('fs').copyFileSync('src/server/server-utils.js', 'dist/server-utils.js');\"",
    "preview": "vite preview",
    "server": "node --loader ts-node/esm tests/server.js",
    "dev:multi": "concurrently \"npm run server\" \"vite\"",
    "test": "node --experimental-vm-modules node_modules/.bin/jest"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "express": "^5.1.0",
    "react-router-dom": "^7.9.4",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^6.0.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.6.2",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "terser": "^5.44.0",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.7"
  }
}