{
  "name": "react-game-ui",
  "version": "1.0.0",
  "type": "module",
  "description": "React + Socket.IO UI components for card/dice games",
  "main": "dist/react-game-ui.cjs.js",
  "module": "dist/react-game-ui.es.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/react-game-ui.es.js",
      "require": "./dist/react-game-ui.cjs.js"
    }
  },
  "files": [
    "dist",
    "src/server.js"
  ],
  "scripts": {
    "build": "vite build && tsc --project tsconfig.json && cp src/types/*.d.ts dist/types/ && cp src/server.js dist/server.js",
    "dev": "vite",
    "preview": "vite preview",
    "server": "node src/server.js",
    "dev:multi": "concurrently \"npm run server\" \"vite\"",
    "test": "node --experimental-vm-modules node_modules/.bin/jest"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "dependencies": {
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.3",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "concurrently": "^9.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "socket.io": "^4.8.1"
  }
}
